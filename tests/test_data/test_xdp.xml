<?xml version="1.0" encoding="UTF-8"?>
<xdp:xdp xmlns:xdp="http://ns.adobe.com/xdp/"
         xmlns:template="http://www.xfa.org/schema/xfa-template/3.0/">
    <template:template>
        <template:subform name="root">
            <template:pageSet>
                <template:pageArea>
                    <template:contentArea>
                        <template:draw name="header">
                            <template:value>
                                <template:text>Test Form Header</template:text>
                            </template:value>
                        </template:draw>
                    </template:contentArea>
                </template:pageArea>
            </template:pageSet>
            
            <template:field name="text_field">
                <template:caption>
                    <template:value>
                        <template:text>Text Input Field</template:text>
                    </template:value>
                </template:caption>
                <template:ui>
                    <template:textEdit/>
                </template:ui>
                <template:bind match="none"/>
            </template:field>

            <template:field name="date_field">
                <template:caption>
                    <template:value>
                        <template:text>Date Field</template:text>
                    </template:value>
                </template:caption>
                <template:ui>
                    <template:dateTimeEdit>
                        <template:format>
                            <template:picture>yyyy-MM-dd</template:picture>
                        </template:format>
                    </template:dateTimeEdit>
                </template:ui>
                <template:bind match="none"/>
            </template:field>

            <template:field name="dropdown_field">
                <template:caption>
                    <template:value>
                        <template:text>Dropdown Field</template:text>
                    </template:value>
                </template:caption>
                <template:ui>
                    <template:choiceList>
                        <template:items>
                            <template:text>Option 1</template:text>
                            <template:text>Option 2</template:text>
                        </template:items>
                        <template:items save="1">
                            <template:text>1</template:text>
                            <template:text>2</template:text>
                        </template:items>
                    </template:choiceList>
                </template:ui>
                <template:bind match="none"/>
            </template:field>

            <template:field name="checkbox_field">
                <template:caption>
                    <template:value>
                        <template:text>Checkbox Field</template:text>
                    </template:value>
                </template:caption>
                <template:ui>
                    <template:checkButton/>
                </template:ui>
                <template:value>
                    <template:integer>1</template:integer>
                </template:value>
                <template:bind match="none"/>
            </template:field>

            <template:exclGroup name="radio_group">
                <template:caption>
                    <template:value>
                        <template:text>Radio Group</template:text>
                    </template:value>
                </template:caption>
                <template:field name="radio1">
                    <template:caption>
                        <template:value>
                            <template:text>Option 1</template:text>
                        </template:value>
                    </template:caption>
                    <template:ui>
                        <template:checkButton shape="round"/>
                    </template:ui>
                    <template:bind match="none"/>
                </template:field>
                <template:field name="radio2">
                    <template:caption>
                        <template:value>
                            <template:text>Option 2</template:text>
                        </template:value>
                    </template:caption>
                    <template:ui>
                        <template:checkButton shape="round"/>
                    </template:ui>
                    <template:bind match="none"/>
                </template:field>
            </template:exclGroup>

            <template:field name="signature_field">
                <template:caption>
                    <template:value>
                        <template:text>Signature Field</template:text>
                    </template:value>
                </template:caption>
                <template:ui>
                    <template:signature/>
                </template:ui>
                <template:bind match="none"/>
            </template:field>
        </template:subform>
    </template:template>
</xdp:xdp> 